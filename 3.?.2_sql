SELECT bk1.book_name,bk1.pub_lang,bk1.book_price 
FROM  book_mast as bk1
JOIN(SELECT pub_lang,MAX(book_price) AS  price          
FROM book_mast           
GROUP BY pub_lang) AS bk2          
ON bk1.pub_lang=bk2.pub_lang AND bk1.book_price=bk2.price;


